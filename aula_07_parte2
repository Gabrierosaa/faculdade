#usando operador +

primeiro_nome = "Paulo"
sobrenome = "Marino"

nome_completo = primeiro_nome + " " + sobrenome
print(nome_completo)

nome = "Paulo"
idade = "36"

frase_completa = "Ola, me chamo" + nome + "e tenho" + idade + "anos de idade."
print(frase_completa)

nome2 = "Roberto"
idade = 22

frase_completa2 = "Ola me chamo" + nome2 + "e tenho" str(idade) + "anos de idade."
print(frase_completa2)
